@model IEnumerable<OpenSourceTees.Models.Image>
<head>
    <link href="~/Content/shop-homepage.css" rel="stylesheet">
</head>
@using Microsoft.AspNet.Identity;
<body>
    <!-- Page Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <h1 class="my-4">Open Source Tee's</h1>
                <ul class="list-group">
                    <li href="" class="list-group-item" onclick="ChangePage('Design','Hot')">Hot List</li>
                    <li href="" class="list-group-item" onclick="ChangePage('Design','New')">New List</li>
                    <li href="" class="list-group-item">To be announced</li>
                </ul>
            </div>
            <!-- /.col-lg-3 -->
            <div class="col-lg-9">
                <h2>What's New?</h2>
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="card h-100">
                                <a href="#"><img class="card-img-top" src="@item.ImageUrl" alt="" onclick="image_onclick(@item.Price, '@item.Id', '@item.ImageUrl', '@User.Identity.GetUserId()')"></a>
                                <div class="card-body">
                                    <h4 class="card-title">
                                        <a href="#">@item.DesignName</a>
                                    </h4>
                                    <h5>$@item.Price</h5>
                                    <p class="card-text">@item.Description</p>
                                </div>
                                <div class="card-footer">
                                    <small class="text-muted">@item.GetDesignerUserName()</small>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <!-- /.row -->
            </div>
            <!-- /.col-lg-9 -->
        </div>
        <!-- /.row -->
    </div>
</body>